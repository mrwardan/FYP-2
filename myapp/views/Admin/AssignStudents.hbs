<head>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <style>
      
        .assStuHeader {
            margin-top: 50px;
            ;
            margin-left: 300px;
        }


        /* The popup form - hidden by default */
        .form-popup {
            display: none;
            position: fixed;
            border: 3px solid #f1f1f1;
        }

        /* Add styles to the form container */
        .form-container {
            max-width: 300px;
            margin-left: 600px;
            padding: 10px;
            background-color: rgb(0, 0, 0);
        }

        /* Full-width input fields */
        .form-container input[type=text],
        .form-container input[type=password] {
            width: 100%;
            padding: 15px;
            margin: 5px 0 45px 0;
        }

        /* When the inputs get focus, do something */
        .form-container input[type=text]:focus,
        .form-container input[type=password]:focus {
            background-color: rgb(224, 212, 212);
            outline: none;
        }

        /* Set a style for the submit/login button */
        .form-container .btn {
            color: white;
            padding: 16px 20px;
            border: solid white;
            cursor: pointer;
            width: 100%;
            margin-bottom: 10px;
            opacity: 0.8;
        }


        /* Add some hover effects to buttons */
        .form-container .btn:hover,
        .open-button:hover {
            opacity: 1;
        }
    </style>
</head>

{{>slideBar}}


<header class="assStuHeader">
    <h4>
        Assign Students to Supervisors
    </h4>

</header>
<hr>


<div class="assStuHeader">

    <main class="my-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Assign Students to Supervisors</div>
                        <div class="card-body">

                            <form class="form-horizontal" action='assignStudents' method="POST">

                                <div class="form-group row">

                                    <!-- Type -->
                                    <label class="col-md-4 col-form-label text-md-right">Supervisor:</label>
                                    <div class="col-md-6">
                                        <p class="help-block">Please choose the Supervisor:</p>
                                        <select  name="supervisor" class="form-control">

                                            {{#each allSupervisors}}

                                            <option value="{{_id}}" >{{fullName}}</option>

                                            {{/each}}



                                        </select>

                                    </div>
                                </div>
                                <br>
                                <div class="form-group row">

                                    <!-- Type -->
                                    <label class="col-md-4 col-form-label text-md-right">Student:</label>
                                    <div class="col-md-6">
                                        <p class="help-block">Please choose the Student:</p>
                                        <select  name="student" class="form-control">
                                            {{#each allStudents}}

                                            <option value="{{_id}}" >{{fullName}}</option>



                                            {{/each}}
                                        </select>

                                    </div>
                                </div>
                                <br>




                                <div class="control-group">

                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" class="btn btn-primary" >
                                            Add
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>

</div>