<head>

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">


    <style>
        body {
            margin: 0;
            padding: 0
        }


        /* USER LIST TABLE */

        /* TABLES */
        .table {
            margin: 0;
            padding: 0
        }

        .table-hover>tbody>tr:hover>td,
        .table-hover>tbody>tr:hover>th {
            background-color: #eee;
            text-decoration: none;

        }

        .table thead>tr {
            color: white;



        }



        .table tbody>tr>td {
            padding: 3px 10px;
            font-size: 0.875em;
            background: #f5f5f5;
            text-decoration: none;


        }

        .table tbody>tr>td>a {
            text-decoration: none;
            color: #800000;



        }


        .main-approve {
            margin-top: 3%;
            margin-left: 20%;
            ;
        }

        #button-a {
            width: 50px;
            height: 40px;
        }
    </style>
</head>

<body>
    {{>headerCH}}
    {{>slidebarCH}}

    <div class="main-approve">

        <div class="container">
            <div class="row">

                <table class="table">
                    <thead>
                        <tr>
                            <th><span>Name</span></th>
                            <th><span>Matric Number</span></th>
                            <th><span>Supervisor</span></th>
                            <th><span>Time</span></th>
                            <th><span>Status</span></th>
                            <th><span>Approve</span></th>


                            <th>&nbsp;</th>

                        </tr>
                    </thead>

                    <tbody>

                        {{#each students}}

                        <tr>
                            <td>

                                <a href="#" class="user-link">{{fullName}}</a>
                            </td>
                            <td>
                                {{matricNo}}
                            </td>
                            <td class="text-center">
                                <span class="label label-default">{{supervisorId.fullName}}</span>

                            </td>
                            <td>
                                <a href="#">{{submittedDate}}</a>

                            </td>


                            <td style="width: 20%;">



                                {{#if chairPersonApproved}}

                                <p> Approved</p>

                                {{else}}

                                <p> Not Approved</p>


                                {{/if}}

                            </td>
                            <td>



                                <button id="button-a">
                                    <i class="bi bi-check" style="font-size: 40px;" onclick="approve('{{_id}}')"></i>


                                </button>


                            </td>


                        </tr>
                        {{/each}}

                    </tbody>
                </table>

            </div>
        </div>
    </div>



    <script>

        console.log('Wardan');


        function approve(studentId) {



            Swal.fire({
                title: 'Do you want to approve this selection?',
                showDenyButton: true,
                confirmButtonText: `Submit`,
                denyButtonText: `Cancel`,
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {

                    $.ajax({
                        url: 'submitApprove',
                        type: 'post',
                        data: { id: studentId },
                        success: function (response) {


                        window.location.reload(false);

                        }
                    });

                    Swal.fire('Saved!', '', 'success')

                } else if (result.isDenied) {
                    Swal.fire('Changes are not saved', '', 'info')
                }
            })


        }










    </script>
</body>